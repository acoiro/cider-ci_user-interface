%tr
  %td
    = link_to workspace_attachment_path(kind: attachment.class.name.underscore,
      path_id: attachment.path_id, path:  attachment.path) do
      = "./#{attachment.path}"

  %td
    - if attachment.content_length
      = (number_to_human_size(attachment.content_length) rescue 'unknown')
  %td= attachment.content_type
