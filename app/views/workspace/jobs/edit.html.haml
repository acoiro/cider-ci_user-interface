=form_for @job, url: workspace_job_path(@job),method: 'PUT', html: {class: "form-horizontal"} do |form|

  - tags= @job.tags

  =form_group "Tags", control_id: "job_tags" do
    =text_field :job, :tags, 
      placeholder: "new tag 1, new tag 2, ...", 
      autofocus: 'autofocus',
      value: tags.pluck(:tag).sort.join(", "), 
      data:{autocomplete_path: workspace_tags_path}, 
      class: "form-control"

  =form_group "Priority" do |opts|
    = form.text_field :priority, type: :number, class: "form-control", id: opts[:control_id]

  = form_group "" do
    .pull-right
      = button_tag type: 'submit', class: "btn btn-primary" do
        Save



    

