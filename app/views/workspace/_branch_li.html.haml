%li.branch.branch-li{data: {name: branch.name}}
  %span.nowrap<>
    %sub
      %span
        -if branch.depth == 0
          0
        -else
          %span<>
            #{branch.depth}
    -if branch.depth == 0
      %b #{branch.name.truncate(20)}
    -else
      = branch.name.truncate(20)
