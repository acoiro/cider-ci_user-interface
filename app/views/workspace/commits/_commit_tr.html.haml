- commit ||= @commit
- cs = @commit_cache_signatures ? @commit_cache_signatures.select{|cs| cs.commit_id == commit.id}.first :  commit.commit_cache_signature

- cache [commit.cache_signature, cs.branches_signature, cs.jobs_signature, cs.repositories_signature] do |cache_tag|
  - branches = commit.branches.select(:name,:current_commit_id).reorder("branches.name ASC")
  - repositories = commit.repositories.uniq.sort

  %tr.commit.reload{{id: "commit-tr_#{commit.id}",data: {cache_tag: cache_tag}}}

    %td.id.links
      =link_to workspace_commit_path(commit), class: "show-commit" do
        %span.commit-id= commit.id[0..5]
      = render 'remote_links', commit: commit, repositories: commit.repositories.uniq.sort

    %td.subject
      %span.subject<>=commit.subject.truncate(80)

    %td.commiter-name= commit.committer_name

    %td.committer-date=render 'humanized_time_from_now', at: commit.committer_date

    %td.repositories
      %ul.list-unstyled
        - repositories.each do |repository| 
          %li.repository{data: {name: repository.name }}<>
            %span.nowrap
              -# %i.icon-repository
              %strong.nowrap= repository.name

    %td.branches
      %ul.list-unstyled
        = render partial: "branch_li", collection: branches, as: :branch, locals: {commit: commit}

    %td.jobs
      %ul.list-unstyled
        - commit.jobs.each do |job|
          %li.job{data: {name: job.name, state: job.state}}
            %span.nowrap
              %span<>
                =link_to workspace_job_path(job), class: "label #{label_class_for_state(job.state)}" do
                  %i{class: icon_class_for_state(job.state)}<>
              = link_to workspace_job_path(job)  do
                %span{style: "margin-left: 0.5em"}=job.name.truncate(12)

    %td.actions
      %ul.actions.list-inline
        - if commit.branches.count > 0
          %li
            =link_to new_workspace_job_path(tree_id: commit.tree_id), class: "btn btn-xs btn-primary run-a-job"  do
              %i.icon-job
              %span Run &hellip; 

