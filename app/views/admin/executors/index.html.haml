- executors ||= @executors

%ol.breadcrumb
  = render "/breadcrumbs/admin/executors"


%ul.list-inline.actions.pull-right
  %li
    =link_to new_admin_executor_path, class: "btn btn-primary" do
      %i.icon-add
      Add a new executor


%h1
  Executors

#reload-page{data: {reload_timeout: session_adjust_reload_timeout(3)}}


  %table.table.table-striped.executors.reload{data: {cache_signature:  executors.map(&:id)}}
    %thead
      %tr
        %th Name
        %th Enabled
        %th Online
        %th Load
    %tbody
    = render partial: 'executor', collection: executors, as: :executor

  = paginate executors, theme: 'default'

